@page
@using MyPlantDiary24FS7024003.JSONFeeds.PlantPlacesSpeicmens;
@model IndexModel
@{
    ViewData["Title"] = "My Plant Diary";
    var brand = ViewData["Brand"];
    List<Specimen> specimens = (List<Specimen>) ViewData["Specimens"];
}

<div class="text-center">
    <h1 class="display-4">Welcome to @brand</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
    <p>
        <table>
            <tr>
                <th>Plant ID</th>
                <th>Specimen ID</th>
                <th>Latitude</th>
                <th>Longitude</th>
                <th>Address</th>
            </tr>
            @{
                foreach(Specimen specimen in specimens)
                {
                    <tr>
                        <td>@specimen.PlantId</td>
                        <td>@specimen.SpecimenId</td>
                        <td>@specimen.Lat</td>
                        <td>@specimen.Lng</td>
                        <td>@specimen.Address</td>
                    </tr>
                }


            }
        </table>
    </p>
</div>
